def timer(func, *args, **arguments):
    """
    This function calculates the time that taken to finish running the given function.
    :param: func.
    :param: args.
    :param: arguments.
    :return: the time that taken to finish running the given function.
    """
    start = timeit.default_timer()
    func(*args, **arguments)
    stop = timeit.default_timer()
    return stop - start


