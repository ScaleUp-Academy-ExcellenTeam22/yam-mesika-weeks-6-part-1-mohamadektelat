import string


def remove_punctuation(paragraph):
    """
       This generator removes all the punctuation from the text.
       :param: paragraph.
       :return: the text after removes all the punctuation.
    """
    for word in paragraph.split():
        yield word.translate(str.maketrans('', '', string.punctuation))


def count_words(paragraph):
    """
           This function return a dictionary of the words and their lengths as value.
           :param: paragraph.
           :return: dictionary of the words and their lengths as value.
    """
    return {word: len(word) for word in remove_punctuation(paragraph)}


